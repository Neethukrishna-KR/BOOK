@model BOOK.Models.adminp
@{
    ViewBag.Title = "profile_pageload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>PROFILE ADMIN</h2>

<div>
    @using (Html.BeginForm("pa_update", "adminp", FormMethod.Get))
    {
        <div>
            <label>
                Name:
            </label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.name)
        </div>
        <div>
            <label>
                Email:
            </label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.email)
        </div>
        <div>
            <input type="submit" value="update" />
            @Html.DisplayFor(m => m.msg)
        </div>
        <div>
            @Html.ActionLink("back to home","Home","login")
        </div>
       
    }
</div>

