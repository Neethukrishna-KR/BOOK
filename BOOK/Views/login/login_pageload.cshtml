@model BOOK.Models.login
@{
    ViewBag.Title = "login_pageload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>login</h2>

<div>
    @using (Html.BeginForm("login_click", "login", FormMethod.Post))
            {
                <div>
                    <label>
                        Username:
                    </label>
                </div>
                <div>
                    @Html.TextBoxFor(m=>m.uname)
                    @Html.ValidationMessageFor(m=>m.uname)
                </div>
                <div>
                    <label>
                        password:
                    </label>
                </div>
                <div>
                    @Html.PasswordFor(m=>m.password)
                    @Html.ValidationMessageFor(m=>m.password)
                </div>
                <div>
                    <input type="submit" value="Login"/>
                    @Html.DisplayFor(m=>m.msg)
                </div>
            }
</div>

